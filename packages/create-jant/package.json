{
  "name": "create-jant",
  "version": "0.1.0",
  "description": "Create a new Jant project",
  "type": "module",
  "bin": {
    "create-jant": "bin/create-jant.js"
  },
  "files": [
    "bin",
    "dist",
    "template"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean --outDir dist",
    "dev": "tsup src/index.ts --format esm --watch",
    "typecheck": "tsc --noEmit",
    "copy-template": "rm -rf template && cp -r ../../templates/jant-site template",
    "prepublishOnly": "pnpm copy-template && pnpm build"
  },
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "fs-extra": "^11.3.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.1",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nicepkg/jant.git",
    "directory": "packages/create-jant"
  },
  "keywords": [
    "jant",
    "create",
    "scaffold",
    "cli",
    "cloudflare",
    "workers",
    "hono"
  ],
  "license": "MIT"
}
