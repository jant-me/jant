{
  "name": "create-jant",
  "version": "0.0.3",
  "description": "Create a new Jant project",
  "type": "module",
  "bin": {
    "create-jant": "bin/create-jant.js"
  },
  "files": [
    "bin",
    "dist",
    "template"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean --outDir dist",
    "dev": "tsup src/index.ts --format esm --watch",
    "typecheck": "tsc --noEmit",
    "copy-template": "rm -rf template && cp -r ../../templates/jant-site template",
    "prepublishOnly": "pnpm copy-template && pnpm build"
  },
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "fs-extra": "^11.3.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jant-me/jant.git",
    "directory": "packages/create-jant"
  },
  "bugs": {
    "url": "https://github.com/jant-me/jant/issues"
  },
  "homepage": "https://jant.me",
  "author": "Jant Contributors",
  "keywords": [
    "jant",
    "create",
    "scaffold",
    "cli",
    "cloudflare",
    "workers",
    "hono"
  ],
  "license": "AGPL-3.0",
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
