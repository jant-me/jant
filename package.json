{
  "name": "jant",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter jant-site dev",
    "build": "pnpm --filter jant-site build",
    "typecheck": "pnpm -r typecheck",
